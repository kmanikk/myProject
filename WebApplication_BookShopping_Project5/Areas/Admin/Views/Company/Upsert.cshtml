@model BookShopping_Project_Models.Company

@{
    var title = Model.Id == 0 ? "New Company" : "Edit Company";
}
<br />
<h2 class="text-primary border-bottom m-2 p-2">
    @title
</h2>
&nbsp;
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (Model.Id != 0)
    {
        <input type="hidden" asp-for="@Model.Id" />
    }
    <div class="row border container m-2 p-2">
        <div class="form-group row m-2 p-2">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row m-2 p-2">
            <div class="col-2">
                <label asp-for="StreetAddress"></label>
            </div>
            <div class="col-8">
                <input asp-for="StreetAddress" class="form-control" />
                <span asp-validation-for="StreetAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row m-2 p-2">
            <div class="col-2">
                <label asp-for="State"></label>
            </div>
            <div class="col-8">
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row m-2 p-2">
            <div class="col-2">
                <label asp-for="City"></label>
            </div>
            <div class="col-8">
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row m-2 p-2">
            <div class="col-2">
                <label asp-for="PostalCode"></label>
            </div>
            <div class="col-8">
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row m-2 p-2">
            <div class="col-2">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-8">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row m-2 p-2">
            <div class="col-2">
                <label asp-for="IsAuthorizedCompany"></label>
            </div>
            <div class="col-8">
                <input type="checkbox" asp-for="IsAuthorizedCompany" />
                <span asp-validation-for="IsAuthorizedCompany" class="text-danger"></span>
            </div>
        </div>
        <div class="m-2 p-2">
            @if (Model.Id == 0)
            {
            <div class="row offset-2 form-group">
                <div class="col-3">
                    <button type="submit" class="btn btn-success form-control">Save</button>
                </div>
                <div class="col-3">
                    <a asp-action="Index" class="btn btn-info form-control">Back To List</a>
                </div>
            </div>
            }
            else
            {
                 <div class="row offset-2 form-group">
                     <div class="col-3">
                       <button type="submit" class="btn btn-success form-control">Update</button>
                     </div>
                     <div class="col-3">
                      <a asp-action="Index" class="btn btn-info form-control">Back To List</a>
                     </div>
                 </div>
            }
        </div>


    </div>
</form>
@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}
